<UserControl x:Class="FitnessTracker.Views.Pages.AddMealPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        <Style x:Key="FormInputStyle" TargetType="Control">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Border Background="White" CornerRadius="8" Padding="30" MaxWidth="500" HorizontalAlignment="Left" Margin="0,0,0,20">
            <StackPanel>
                <!-- Validation Message -->
                <TextBlock Text="{Binding ValidationMessage}"
                           Foreground="#D32F2F"
                           FontWeight="SemiBold"
                           Margin="0,0,0,15"
                           TextWrapping="Wrap"
                           Visibility="{Binding ValidationMessage, Converter={StaticResource StringToVisibilityConverter}, FallbackValue=Collapsed}"/>

                <!-- Preset Selection -->
                <TextBlock Text="Select Preset (optional)" Style="{StaticResource FormLabelStyle}"/>
                <ComboBox ItemsSource="{Binding Presets}"
                          SelectedItem="{Binding SelectedPreset}"
                          DisplayMemberPath="Name"
                          Style="{StaticResource FormInputStyle}"/>

                <!-- Meal Name -->
                <TextBlock Text="Meal Name *" Style="{StaticResource FormLabelStyle}"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource FormInputStyle}"/>

                <!-- Date -->
                <TextBlock Text="Date *" Style="{StaticResource FormLabelStyle}"/>
                <DatePicker SelectedDate="{Binding SelectedDate}"
                            Style="{StaticResource FormInputStyle}"/>

                <!-- Nutrition Info -->
                <TextBlock Text="Nutrition Information (all required)" FontSize="15" FontWeight="SemiBold" Margin="0,10,0,15"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock Text="Calories *" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding CaloriesText, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource FormInputStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="2">
                        <TextBlock Text="Protein (g) *" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding ProteinGramsText, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource FormInputStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="0">
                        <TextBlock Text="Carbohydrates (g) *" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding CarbohydratesGramsText, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource FormInputStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="2">
                        <TextBlock Text="Fat (g) *" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding FatGramsText, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource FormInputStyle}"/>
                    </StackPanel>
                </Grid>

                <!-- Serving Size -->
                <TextBlock Text="Serving Size (multiplier) *" Style="{StaticResource FormLabelStyle}"/>
                <TextBox Text="{Binding ServingSize, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource FormInputStyle}"/>

                <!-- Notes -->
                <TextBlock Text="Notes (optional)" Style="{StaticResource FormLabelStyle}"/>
                <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource FormInputStyle}"
                         Height="60"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalContentAlignment="Top"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Save Meal"
                            Command="{Binding SaveCommand}"
                            Background="#3D5A80"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="25,12"
                            FontSize="14"
                            Cursor="Hand"/>
                    <Button Content="Cancel"
                            Command="{Binding CancelCommand}"
                            Background="#666"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="25,12"
                            FontSize="14"
                            Cursor="Hand"
                            Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </ScrollViewer>
</UserControl>
