<UserControl x:Class="FitnessTracker.Views.Pages.MealListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3D5A80"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2D4A70"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Action Bar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <Button Content="Add Meal"
                    Style="{StaticResource ActionButtonStyle}"
                    Command="{Binding AddMealCommand}"/>
            <Button Content="Delete Selected"
                    Style="{StaticResource ActionButtonStyle}"
                    Command="{Binding DeleteMealCommand}"
                    Margin="10,0,0,0"
                    Background="#666"/>
        </StackPanel>

        <!-- Filters -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Start Date" FontSize="12" Foreground="#666"/>
                    <DatePicker SelectedDate="{Binding StartDateFilter}"
                                Width="150" Margin="0,5,0,0"/>
                </StackPanel>
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="End Date" FontSize="12" Foreground="#666"/>
                    <DatePicker SelectedDate="{Binding EndDateFilter}"
                                Width="150" Margin="0,5,0,0"/>
                </StackPanel>
                <Button Content="Clear Filters"
                        Command="{Binding ClearFiltersCommand}"
                        VerticalAlignment="Bottom"
                        Padding="15,8"
                        Background="#98C1D9"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>

        <!-- Meal List -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Meals}"
                  SelectedItem="{Binding SelectedMeal}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Background="White"
                  BorderThickness="0"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  RowHeight="45">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="180"/>
                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat={}{0:dd/MM/yyyy HH:mm}}" Width="150"/>
                <DataGridTextColumn Header="Calories" Binding="{Binding Nutrition.Calories, StringFormat={}{0:N0}}" Width="80"/>
                <DataGridTextColumn Header="Protein" Binding="{Binding Nutrition.ProteinGrams, StringFormat={}{0:N1}g}" Width="80"/>
                <DataGridTextColumn Header="Carbs" Binding="{Binding Nutrition.CarbohydratesGrams, StringFormat={}{0:N1}g}" Width="80"/>
                <DataGridTextColumn Header="Fat" Binding="{Binding Nutrition.FatGrams, StringFormat={}{0:N1}g}" Width="80"/>
                <DataGridTextColumn Header="Serving" Binding="{Binding ServingSize, StringFormat={}{0:N1}x}" Width="70"/>
                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
