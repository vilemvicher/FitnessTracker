<UserControl x:Class="FitnessTracker.Views.Pages.UserProfilePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        <Style x:Key="FormInputStyle" TargetType="Control">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#293241"/>
            <Setter Property="Margin" Value="0,20,0,15"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Background="White" CornerRadius="8" Padding="30" MaxWidth="500" HorizontalAlignment="Left">
            <StackPanel>
                <!-- Profile Info Section -->
                <TextBlock Text="Personal Information" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,15"/>

                <TextBlock Text="Name" Style="{StaticResource FormLabelStyle}"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource FormInputStyle}"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Weight (kg)" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding WeightKg, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource FormInputStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Height (cm)" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding HeightCm, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource FormInputStyle}"/>
                    </StackPanel>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Age" Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource FormInputStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Gender" Style="{StaticResource FormLabelStyle}"/>
                        <ComboBox ItemsSource="{Binding Genders}"
                                  SelectedItem="{Binding Gender}"
                                  Style="{StaticResource FormInputStyle}"/>
                    </StackPanel>
                </Grid>

                <!-- BMR Information Section -->
                <TextBlock Text="BMR Calculator" Style="{StaticResource SectionHeaderStyle}"/>

                <Border Background="#F8F9FA" CornerRadius="6" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Basal Metabolic Rate (BMR)"
                                       FontSize="13" Foreground="#666"/>
                            <TextBlock Grid.Column="1" FontSize="14" FontWeight="SemiBold">
                                <Run Text="{Binding BMR, StringFormat=N0, Mode=OneWay}"/>
                                <Run Text=" kcal/day" Foreground="#666"/>
                            </TextBlock>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Recommended Daily Calories (moderate activity)"
                                       FontSize="13" Foreground="#666"/>
                            <TextBlock Grid.Column="1" FontSize="14" FontWeight="SemiBold">
                                <Run Text="{Binding RecommendedDailyCalories, StringFormat=N0, Mode=OneWay}"/>
                                <Run Text=" kcal/day" Foreground="#666"/>
                            </TextBlock>
                        </Grid>
                        <TextBlock Text="Based on Mifflin-St Jeor equation with moderate activity level (1.55x)"
                                   FontSize="11" Foreground="#999" Margin="0,10,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- Weekly Goals Section -->
                <TextBlock Text="Weekly Goals" Style="{StaticResource SectionHeaderStyle}"/>

                <TextBlock Text="Calories to Burn (per week)" Style="{StaticResource FormLabelStyle}"/>
                <TextBox Text="{Binding CaloriesBurnedTarget, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource FormInputStyle}"/>

                <TextBlock Text="Calories to Consume (per week)" Style="{StaticResource FormLabelStyle}"/>
                <TextBox Text="{Binding CaloriesConsumedTarget, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource FormInputStyle}"/>

                <TextBlock Text="Number of Exercises (per week)" Style="{StaticResource FormLabelStyle}"/>
                <TextBox Text="{Binding ExerciseCountTarget, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource FormInputStyle}"/>

                <!-- Unsaved Changes Indicator -->
                <TextBlock Text="You have unsaved changes"
                           Foreground="#EE6C4D"
                           FontStyle="Italic"
                           Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}"
                           Margin="0,0,0,15"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Save Profile"
                            Command="{Binding SaveCommand}"
                            Background="#293241"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="25,12"
                            FontSize="14"
                            Cursor="Hand"/>
                    <Button Content="Reset"
                            Command="{Binding ResetCommand}"
                            Background="#666"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="25,12"
                            FontSize="14"
                            Cursor="Hand"
                            Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </ScrollViewer>
</UserControl>
