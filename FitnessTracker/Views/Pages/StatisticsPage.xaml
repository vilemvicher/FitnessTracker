<UserControl x:Class="FitnessTracker.Views.Pages.StatisticsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,15,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#293241"/>
            <Setter Property="Margin" Value="0,20,0,15"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Exercise Statistics -->
            <TextBlock Text="Exercise Statistics" Style="{StaticResource SectionHeaderStyle}" Margin="0,0,0,15"/>
            <WrapPanel>
                <Border Style="{StaticResource StatCardStyle}" Width="180">
                    <StackPanel>
                        <TextBlock Text="Total Exercises" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="{Binding TotalExerciseCount}"
                                   FontSize="36" FontWeight="Bold" Foreground="#EE6C4D"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCardStyle}" Width="180">
                    <StackPanel>
                        <TextBlock Text="Total Calories Burned" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="{Binding TotalCaloriesBurned, StringFormat={}{0:N0}}"
                                   FontSize="28" FontWeight="Bold" Foreground="#EE6C4D"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCardStyle}" Width="180">
                    <StackPanel>
                        <TextBlock Text="This Week" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="{Binding WeeklyCaloriesBurned, StringFormat={}{0:N0}}"
                                   FontSize="28" FontWeight="Bold" Foreground="#EE6C4D"/>
                        <TextBlock Text="calories" FontSize="11" Foreground="#888"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCardStyle}" Width="180">
                    <StackPanel>
                        <TextBlock Text="This Month" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="{Binding MonthlyCaloriesBurned, StringFormat={}{0:N0}}"
                                   FontSize="28" FontWeight="Bold" Foreground="#EE6C4D"/>
                        <TextBlock Text="calories" FontSize="11" Foreground="#888"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCardStyle}" Width="180">
                    <StackPanel>
                        <TextBlock Text="Avg. Duration" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="{Binding AverageTrainingDuration}"
                                   FontSize="28" FontWeight="Bold" Foreground="#98C1D9"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCardStyle}" Width="180">
                    <StackPanel>
                        <TextBlock Text="Favorite Exercise" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="{Binding MostFrequentExerciseType}"
                                   FontSize="20" FontWeight="Bold" Foreground="#293241"/>
                    </StackPanel>
                </Border>
            </WrapPanel>

            <!-- Meal Statistics -->
            <TextBlock Text="Meal Statistics" Style="{StaticResource SectionHeaderStyle}"/>
            <WrapPanel>
                <Border Style="{StaticResource StatCardStyle}" Width="180">
                    <StackPanel>
                        <TextBlock Text="Total Calories Consumed" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="{Binding TotalCaloriesConsumed, StringFormat={}{0:N0}}"
                                   FontSize="28" FontWeight="Bold" Foreground="#3D5A80"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCardStyle}" Width="180">
                    <StackPanel>
                        <TextBlock Text="This Week" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="{Binding WeeklyCaloriesConsumed, StringFormat={}{0:N0}}"
                                   FontSize="28" FontWeight="Bold" Foreground="#3D5A80"/>
                        <TextBlock Text="calories" FontSize="11" Foreground="#888"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCardStyle}" Width="180">
                    <StackPanel>
                        <TextBlock Text="This Month" FontSize="12" Foreground="#666"/>
                        <TextBlock Text="{Binding MonthlyCaloriesConsumed, StringFormat={}{0:N0}}"
                                   FontSize="28" FontWeight="Bold" Foreground="#3D5A80"/>
                        <TextBlock Text="calories" FontSize="11" Foreground="#888"/>
                    </StackPanel>
                </Border>
            </WrapPanel>

            <!-- Weekly Goals Progress -->
            <TextBlock Text="Weekly Goals Progress" Style="{StaticResource SectionHeaderStyle}"/>
            <WrapPanel>
                <Border Style="{StaticResource StatCardStyle}" Width="250">
                    <StackPanel>
                        <TextBlock Text="Calories Burned Goal" FontSize="12" Foreground="#666"/>
                        <ProgressBar Value="{Binding WeeklyBurnedGoalProgress}" Maximum="100"
                                     Height="10" Margin="0,10,0,5"
                                     Foreground="#EE6C4D" Background="#E0E0E0"/>
                        <TextBlock Text="{Binding WeeklyBurnedGoalProgress, StringFormat={}{0:N1}%}"
                                   FontSize="18" FontWeight="SemiBold" Foreground="#EE6C4D"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCardStyle}" Width="250">
                    <StackPanel>
                        <TextBlock Text="Calories Consumed Goal" FontSize="12" Foreground="#666"/>
                        <ProgressBar Value="{Binding WeeklyConsumedGoalProgress}" Maximum="100"
                                     Height="10" Margin="0,10,0,5"
                                     Foreground="#3D5A80" Background="#E0E0E0"/>
                        <TextBlock Text="{Binding WeeklyConsumedGoalProgress, StringFormat={}{0:N1}%}"
                                   FontSize="18" FontWeight="SemiBold" Foreground="#3D5A80"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCardStyle}" Width="250">
                    <StackPanel>
                        <TextBlock Text="Exercise Count Goal" FontSize="12" Foreground="#666"/>
                        <ProgressBar Value="{Binding WeeklyExerciseCountProgress}" Maximum="100"
                                     Height="10" Margin="0,10,0,5"
                                     Foreground="#98C1D9" Background="#E0E0E0"/>
                        <TextBlock Text="{Binding WeeklyExerciseCountProgress, StringFormat={}{0:N1}%}"
                                   FontSize="18" FontWeight="SemiBold" Foreground="#98C1D9"/>
                    </StackPanel>
                </Border>
            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
