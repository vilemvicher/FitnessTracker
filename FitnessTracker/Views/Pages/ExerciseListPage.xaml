<UserControl x:Class="FitnessTracker.Views.Pages.ExerciseListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:FitnessTracker.Models"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#EE6C4D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D85A3D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Action Bar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
            <Button Content="Add Exercise"
                    Style="{StaticResource ActionButtonStyle}"
                    Command="{Binding AddExerciseCommand}"/>
            <Button Content="Delete Selected"
                    Style="{StaticResource ActionButtonStyle}"
                    Command="{Binding DeleteExerciseCommand}"
                    Margin="10,0,0,0"
                    Background="#666"/>
        </StackPanel>

        <!-- Filters -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Filter by Type" FontSize="12" Foreground="#666"/>
                    <ComboBox ItemsSource="{Binding ExerciseTypes}"
                              SelectedItem="{Binding SelectedTypeFilter}"
                              Width="150" Margin="0,5,0,0"/>
                </StackPanel>
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Start Date" FontSize="12" Foreground="#666"/>
                    <DatePicker SelectedDate="{Binding StartDateFilter}"
                                Width="150" Margin="0,5,0,0"/>
                </StackPanel>
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="End Date" FontSize="12" Foreground="#666"/>
                    <DatePicker SelectedDate="{Binding EndDateFilter}"
                                Width="150" Margin="0,5,0,0"/>
                </StackPanel>
                <Button Content="Clear Filters"
                        Command="{Binding ClearFiltersCommand}"
                        VerticalAlignment="Bottom"
                        Padding="15,8"
                        Background="#98C1D9"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>

        <!-- Exercise List -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Exercises}"
                  SelectedItem="{Binding SelectedExercise}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Background="White"
                  BorderThickness="0"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  RowHeight="45">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="120"/>
                <DataGridTextColumn Header="Date" Binding="{Binding Date, StringFormat={}{0:dd/MM/yyyy HH:mm}}" Width="150"/>
                <DataGridTextColumn Header="Duration" Binding="{Binding Duration, StringFormat={}{0:hh\\:mm}}" Width="100"/>
                <DataGridTextColumn Header="Calories" Binding="{Binding CaloriesBurned, StringFormat={}{0:N0}}" Width="100"/>
                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
