<Application x:Class="FitnessTracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:FitnessTracker.ViewModels"
             xmlns:pages="clr-namespace:FitnessTracker.Views.Pages"
             xmlns:converters="clr-namespace:FitnessTracker.Converters">
    <Application.Resources>
        <!-- Converters -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

        <!-- DataTemplates for ViewModel to View mapping -->
        <DataTemplate DataType="{x:Type viewModels:DashboardViewModel}">
            <pages:DashboardPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:ExerciseListViewModel}">
            <pages:ExerciseListPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:AddExerciseViewModel}">
            <pages:AddExercisePage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:MealListViewModel}">
            <pages:MealListPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:AddMealViewModel}">
            <pages:AddMealPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:StatisticsViewModel}">
            <pages:StatisticsPage/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:UserProfileViewModel}">
            <pages:UserProfilePage/>
        </DataTemplate>
    </Application.Resources>
</Application>
